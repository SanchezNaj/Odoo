<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="ficha_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="mb32">
                            <img t-if="doc.imagen" t-att-src="image_data_uri(doc.imagen)" style="max-width:100px" class="float-right"/>
                        </div>
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <td>numero</td>
                                    <td><span t-field="doc.numero"/></td>
                                    <td>no_organico</td>
                                    <td><span t-field="doc.no_organico"/></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
        id="report_personal"
        model="relacion.personal"
        report_type="qweb-pdf"
        string="Ficha de Personal"
        name="relacion_personal.ficha_document"
        file="ficha_document"
    />
</odoo>

